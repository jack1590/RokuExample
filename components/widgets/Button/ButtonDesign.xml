<?xml version="1.0" encoding="utf-8" ?>
<component name="ButtonDesign" extends="group">

  <interface>
    <field id="text" type="string" alias="name.text" onChange="onTextChanged"/>
  </interface>


 <script type="text/brightscript" uri="ButtonDesign.brs"/>

  <children>

    <LayoutGroup
     id="group"
     horizAlignment="center"
     itemSpacings="[30]">

      <Rectangle
        id="focusEdge"
        color="#00D4D900"
        width="168"
        height="78">

        <Rectangle
          id="background"
          color="#FFFFFF"
          width="160"
          height="70"
          translation="[4,4]">

          <Label
            id="name"
            color="#586162" />

        </Rectangle>

      </Rectangle>

    </LayoutGroup>

  </children>
</component>
